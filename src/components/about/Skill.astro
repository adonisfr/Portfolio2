---
import { Image } from "astro:assets";

const { logo, name } = Astro.props;
---

<div class="flex flex-col items-center justify-center">
  {
    logo && (
      <div>
        <Image src={logo} alt="image" height={46} width={46} loading="lazy" />
      </div>
    )
  }

  <div class="font-bold">
    <h1 class={`${logo ? "text-xl" : "text-2xl"}`}>{name}</h1>
  </div>
</div>
